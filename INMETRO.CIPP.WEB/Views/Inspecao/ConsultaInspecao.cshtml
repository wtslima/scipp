@model List<INMETRO.CIPP.WEB.Models.InspecaoModel>


@{
    ViewBag.Title = "ConsultaInspecao";
}
    <div class="row">
    <div class="col-md-10 col-md-offset-1">
        <h2 class="tituloSistema" >Consulta de Inspeções</h2>
        
        <div class="col-md-8 col-md-offset-1">
            <form action="@Url.Action("ConsultaInspecao", "Inspecao")" class="form" id="download" method="post" novalidate="novalidate">
           
                <div class="" style="float: left" >
                    @Html.Label("CÓDIGO OIA-PP")
                    @Html.TextBox("CodigoOia", null, new { @class = "form-control", maxlength="4", onkeypress = "return onlyNos(event,this);" })
                    @Html.ValidationMessage("CodigoOia", null, new { @class = "text-danger" })
              
                </div>
                <div class="" style="float: right" >
                    @Html.Label("Digite o número CIPP")
                    @Html.TextBox("CodigoCipp", null, new { @class = "form-control", maxlength="7", onkeypress = "return onlyNos(event,this);" })
                    @Html.ValidationMessage("CodigoCipp")

                </div>
           
                <div id="loginActions" style="float: right">
                    <input type="submit" class="btn btn-primary" value="Buscar" title="Download" id="btnBuscar">
                    @*<input type="reset" class="btn btn-basic" value="Cancelar" title="Cancelar" id="Cancelar">*@
                </div>
            </form>
        </div>
    </div>

   
   
    @if (Model != null)
    {
        <div id="idConsultaInspecao">
            @Html.Partial("_PartialConsultaInspecao", Model)
        </div>

    }

</div>


<script>
    function onlyNos(e, t) {

        if (window.event) {
            var charCode = window.event.keyCode;
        }
        else if (e) {
            var charCode = e.which;
        }
        else { return true; }

        if (charCode > 31 && (charCode < 48 || charCode > 57)) {

            //alert("Please Enter only Numbers");
            return false;
        }
        return true;
    }
</script>