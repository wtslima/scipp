@model INMETRO.CIPP.WEB.Models.OrganismoModel

@{
    ViewBag.Title = "Excluir";
}

<div id="idExcluirTela" class="col-md-10 col-md-offset-1">

    <h2  class="tituloSistema">Excluir</h2>

    <h3>Você tem certeza que deseja excluir este Organismo?</h3>

    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayName("Nome")
        </dt>

        <dd id="idNome">
            @Html.DisplayFor(model => model.Nome)
        </dd>

        <dt>
            @Html.DisplayName("CÓDIGO-OIA-PP")
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Codigo)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-group">
            <div class="col-md-1">
                <div class="form-actions no-color">
                    <input type="submit" value="Excluir" class="btn btn-primary" />

                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-10">
                <input class="btn btn-default" type='button' value='Voltar' onclick='window.location = "@Url.Action("Index", "Organismo")";'/>
            </div>
        </div>
    }
</div>

